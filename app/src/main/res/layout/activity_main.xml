<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:background="#339E17"
                android:textColor="#E8FCFDFD"
                android:textSize="40sp"
                android:text="AndroidCamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"/>
        <ImageView

                android:src="@drawable/logo_small"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        <TextView
                android:text="Welcom to Android"
                android:layout_marginLeft="@android:dimen/notification_large_icon_height"
                android:textSize="30sp"
                android:textColor="#AD00FF0D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="120dip"
                android:textSize="15dp"
                android:text="Sign in to continue"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"/>
        <TextView
                android:layout_marginLeft="40dip"
                android:layout_marginTop="48dip"
                android:text="USRNAME"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:layout_marginLeft="40dip"
                android:text="Enter your Usernamme"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="40dip"
                android:layout_marginTop="30dip"
                android:text="PASSWORD"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:layout_marginLeft="40dip"
                android:text="Enter your Password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        <Button
                android:text="SIGN IN"
                android:textSize="25sp"
                android:textColor="#FAF7F7"
                android:background="@drawable/button"
                android:layout_marginLeft="45dip"
                android:layout_marginTop="30dip"
                android:layout_width="299dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginTop="15dip"
                android:layout_marginLeft="100dip"
                android:textSize="14sp"
                android:text="SIGN UP FOR AN ACCOUNT?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>